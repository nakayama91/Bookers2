<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

        <h2>User info</h2>

        <%= form_with model:@user, local:true do |f| %>
          <label>Name</label> <br />
          <%= f.text_field :name %> <br />

          <label >Image</label> <br />
          <%= f.attachment_field :profile_image %> <br />

          <label >Introduction</label> <br />
          <%= f.text_area :introduction %> <br />
          <%= f.submit "Update user" , class:'btn btn-secondary' %>
        <% end %>

      </div>
    </div>
  </div>

</main>