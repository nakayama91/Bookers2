<main>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm0 mx-auto">
        <h1>Editing Book</h1>
        
        <%= form_with model:@book, local:true do |f| %>
          <label>Title</label> <br />
            <%= f.text_field :title %> <br />
            
          <label>Opinion</label> <br />
            <%= f.text_area :body %> <br />
            <%= f.submit "Update Book" , class:'btn btn-success' %>  
        <% end %>
        <p>
          <%= link_to "Show", book_path %>
          <span>|</span>
          <%= link_to "Back", books_path %>
        </p>  
      </div>
    </div>
  </div>
</main>