<main>
  <p id="notice"></p>

  <div class="container px-5 px-sm-0">
    <div class="row">

      <%# 左側userinfoの表示 %>
      <%= render 'books/userinfo', books: @books %>

      <%# book一覧テーブル %>
      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>

        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @books.each do |book| %>
            <tr>
              <td></td>
              <td><span><%= book.title %></span></td>
              <td><span><%= book.body %></span></td>
            </tr>
            <% end %>
          </tbody>
        </table>

      </div>

    </div>
  </div>
</main>

