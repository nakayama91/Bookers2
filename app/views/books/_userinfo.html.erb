<%# user info %>
      <div class="col-md-3">
        <h2>User info</h2>
        <%= attachment_image_tag @user, :profile_image, :fill, 63, 63,  fallback: "no_image.jpg" %>
        <table class="table">
          <tbody>
            <tr></tr>
            <tr>
              <th>name</th>
              <th><%= current_user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th></th>
            </tr>
          </tbody>
        </table>

        <%# editの編集 %>
        <div class="row">
          <%= link_to edit_user_path(current_user), class: "btn btn-outline-secondary btn-block fas fa-user-cog" do %>
          <% end %>
        </div>

        <h2 class="mt-3">New book</h2>

        <%# New bookの編集　%>
        <%= form_with model:@book, url:'/books', local:true do |f| %>
          <div class="form-group">
            <label for="book_title">Title</label> <br />
            <%= f.text_field :title %>
          </div>
          <div class="form-group">
            <label for="book_opinion">Opinion</label> <br />
            <%= f.text_area :body %>
          </div>
          <div class="form-group">
            <%= f.submit "Create Book" , class:'btn btn-success' %>
          </div>



        <% end %>

      </div>