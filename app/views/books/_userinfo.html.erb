<div class="col-md-3">
  <h2>User info</h2>
  <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
  <table class="table">
    <tbody>
      <tr>
        <th>name</th>
        <th><%= @user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= @user.introduction %></th>
      </tr>
    </tbody>
  </table>

  <%# editの編集 %>
  <div class="row">
    <%= link_to edit_user_path(@user), class: "btn btn-outline-secondary btn-block fas fa-user-cog" do %>
    <% end %>
  </div>

  <h2 class="mt-3">New book</h2>

  <%# New bookの編集　%>
  <%= form_with model:@newbook, local:true do |f| %>
        
    <label>Title</label> <br />
    <div class="new-book">
      <%= f.text_field :title, class:'col-12 new-box' %> <br />
    </div>

    <label>Opinion</label> <br />
    <div class="new-book">
      <%= f.text_area :body, class:'col-12 new-box' %> <br />
    </div>
    <div class="new-book">
      <%= f.submit "Create Book", class:'btn btn-success' %>
    </div>

  <% end %>
</div>